<!-- HOME -->
    <section class="section-hero overlay inner-page bg-image" style="background-image: url(<%= asset_path 'background_header.png' %>)" id="home-section">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h1 class="text-white font-weight-bold"><%= @job.job_title %></h1>
            <div class="custom-breadcrumbs">
              <a href="/">Accueil</a> <span class="mx-2 slash">/</span>
              <a href="/jobs">Emplois</a> <span class="mx-2 slash">/</span>
              <span class="text-white"><strong><%= @job.job_title %></strong></span>
            </div>
          </div>
        </div>
      </div>
    </section>
    
<section class="site-section">
      <div class="container">
        <div class="row align-items-center mb-5">
          <div class="col-lg-8 mb-4 mb-lg-0">
            <div class="d-flex align-items-center">
              <div>
                <h2><%= @job.job_title %></h2>
                <div>
                  <span class="ml-0 mr-2 mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= @job.job_city %>, <%= @job.job_country %></span>
                  <span class="m-2"><i class="fas fa-tags mr-2"></i><span class="text-primary"><%= @job.job_category %></span></span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="row">
              <div class="col-6">
                <a href="#" class="btn btn-block btn-primary btn-md">Envoyer CV</a>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8">
            <div class="mb-5">
              <h3 class="h5 d-flex align-items-center mb-4 text-primary"><i class="fas fa-align-left mr-3"></i>Description de l'emploi</h3>
              <p><%= @job.job_description %></p>
            </div>

            <div class="row mb-5">
              <div class="col-6">
                <a href="#" class="btn btn-block btn-primary btn-md">Envoyer mon CV</a>
              </div>
            </div>

          </div>
          
          <div class="col-lg-4">
            <div class="bg-light p-3 border rounded mb-4">
              <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Résumé</h3>
              <ul class="list-unstyled pl-3 mb-0">
                <li class="mb-2"><strong class="text-black">Publié le :</strong> <%= @job.job_publish_date.strftime("%d/%m/%Y") %></li>
                <li class="mb-2"><strong class="text-black">Catégorie :</strong> <%= @job.job_category %></li>
                <li class="mb-2"><strong class="text-black">Localisation :</strong> <%= @job.job_city %>, <%= @job.job_country %></li>
                <li class="mb-2"><strong class="text-black">Salaire annuel :</strong> <%= @job.job_salary %>€</li>
              </ul>
            </div>
              <% if current_user && current_user.admin %>
                <a href="/jobs/<%= @job.id %>/change" class="btn btn-block btn-primary btn-md btn-admin">Modifier l'offre</a>
                <%= form_with(url: "/jobs/#{@job.id}", method: "delete") do |f| %>
                   <%= submit_tag("Supprimer l'offre", class: "btn btn-block btn-primary btn-md btn-admin") %>
                <% end %>
              <% end %>
          </div>
         </section>