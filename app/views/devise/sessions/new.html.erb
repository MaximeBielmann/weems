<div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-12">
                
            </div>
            <div class="col-md-4 col-sm-12">
                <h1 class="text-center">Se connecter</h1>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
                </div>
              
                <div class="field">
                  <%= f.label :mot_de_passe %><br />
                  <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
                </div>
              
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :se_souvenir_de_moi %>
                  </div>
                <% end %>
              
                <div class="actions">
                  <%= f.submit "Se connecter", class: "btn btn-primary btn-block" %>
                </div>
              <% end %>
              
              <%= render "devise/shared/links" %>
                
            </div>
        </div>
</div>