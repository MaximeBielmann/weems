<div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-12">
                
            </div>
            <div class="col-md-4 col-sm-12">
              <h1 class="text-center">S'inscrire</h1>
  
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
            
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
              </div>
            
              <div class="field">
                <%= f.label :mot_de_passe %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
                <% end %><br />
                <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              </div>
            
              <div class="field">
                <%= f.label :confirmation_mot_de_passe %><br />
                <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
              </div>
            
              <div class="actions">
                <%= f.submit "S'inscrire", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
            
            <%= render "devise/shared/links" %>
              
          </div>
      </div>
</div>