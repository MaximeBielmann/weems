<section class="section-hero overlay inner-page bg-image" style="background-image: url(<%= asset_path 'background_header.png' %>)" id="home-section">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h1 class="text-white font-weight-bold">Envoyer un CV</h1>
            <div class="custom-breadcrumbs">
              <a href="/">Accueil</a> <span class="mx-2 slash">/</span>
              <span class="text-white"><strong>Envoyer un CV</strong></span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="site-section" id="next-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5 mb-lg-0">
            <h3>Nous contacter</h3>
              <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                <%= f.input :name, error: "Nom obligatoire", :required => true %>
                <%= f.input :email, error: "Email obligatoire", :required => true %>
                <%= f.input :message, :as => :text, :required => true %>
                <div class= "hidden">
                  <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                </div>
                <div>
                  </br>
                  <%= f.button :submit, 'Envoyer', :class=> "btn btn-primary" %>
                </div>
              <% end %>
          </div>
          <div class="col-lg-5 ml-auto">
            <div class="p-4 mb-3 bg-white">
              <p class="mb-0 font-weight-bold">Addresse</p>
              <p class="mb-4">108 Rue de Bonnevoie, CP L1261, Luxembourg</p>

              <p class="mb-0 font-weight-bold">Téléphone</p>
              <p class="mb-4"><a href="#">+352 661 544 932</a></p>

              <p class="mb-0 font-weight-bold">Email</p>
              <p class="mb-0"><a href="#">contact@weems-associates.com</a></p>

            </div>
          </div>
        </div>
      </div>
    </section>